{
  "name": "reveal.js",
  "version": "4.0.2",
  "description": "The HTML Presentation Framework",
  "homepage": "https://revealjs.com",
  "subdomain": "revealjs",
  "main": "dist/reveal.js",
  "module": "dist/reveal.esm.js",
  "license": "MIT",
  "author": {
    "name": "Hakim El Hattab",
    "email": "hakim.elhattab@gmail.com",
    "web": "https://hakim.se"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/hakimel/reveal.js.git"
  },
  "engines": {
    "node": ">=15.0.0"
  },
  "keywords": [
    "reveal",
    "slides",
    "presentation"
  ],
  "browserslist": "> 0.5%, IE 11, not dead",
  "scripts": {
    "test": "gulp test",
    "start": "node plugin/server",
    "start:client": "gulp",
    "build": "NODE_ENV=production gulp",
    "serve": "gulp serve",
    "lint:js": "eslint 'plugin/' --quiet --fix && eslint 'js/**/*.js' --quiet --fix",
    "lint:css": "stylelint 'css/**/*.scss' --fix",
    "package": "gulp package"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "chart.js": "^2.9.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "highlight.js": "^10.3.2",
    "jquery": "^3.5.1",
    "mathjax": "^3.1.2",
    "mustache": "^4.0.1",
    "particles.js": "github:VincentGarreau/particles.js#dev",
    "plyr": "^3.6.2",
    "reveal.js-menu": "^2.1.0",
    "socket.io": "2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-transform-html-import-to-string": "0.0.1",
    "browser-sync": "^2.26.13",
    "colors": "^1.4.0",
    "core-js": "^3.6.5",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-connect": "^5.7.0",
    "gulp-header": "^2.0.9",
    "gulp-if": "^3.0.0",
    "gulp-nodemon": "^2.5.0",
    "gulp-postcss": "^9.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-zip": "^5.0.2",
    "marked": "^1.2.2",
    "node-qunit-puppeteer": "^2.0.3",
    "prettier": "^2.1.2",
    "qunit": "^2.11.3",
    "rollup": "^2.33.1",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "^1.9.6",
    "workbox-build": "^5.1.4",
    "yargs": "^16.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "always",
    "printWidth": 80,
    "overrides": [
      {
        "files": [
          "index.html"
        ],
        "options": {
          "printWidth": 100
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "module": false,
      "console": false,
      "unescape": false,
      "define": false,
      "exports": false,
      "Reveal": true,
      "io": true,
      "Chart": true
    },
    "rules": {
      "curly": 0,
      "eqeqeq": 2,
      "wrap-iife": [
        2,
        "any"
      ],
      "no-use-before-define": [
        2,
        {
          "functions": false
        }
      ],
      "new-cap": 2,
      "no-caller": 2,
      "dot-notation": 0,
      "no-eq-null": 2,
      "no-unused-vars": "warn",
      "no-unused-expressions": 0,
      "prefer-template": "error"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 2,
      "no-descending-specificity": null,
      "at-rule-no-unknown": null,
      "font-family-no-missing-generic-family-keyword": [
        true,
        {
          "ignoreFontFamilies": [
            "feather"
          ]
        }
      ]
    }
  }
}
